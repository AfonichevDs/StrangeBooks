@model BookStore.Models.CommentsViewModel
@using BookStore.Helpers
@Scripts.Render("~/bundles/jquery")
<script src="~/Scripts/commentsPagesScript.js"></script>
@{ 
    foreach (var item in Model.Comments)
    {
        <div class="comment">
            <a>@item.User.UserName</a>
            <p style="font-size:15px; padding:8px 0px 2px 0px;">@item.Text</p>
            <p style="font-size:12px; color:#757575">@Html.DisplayFor(i => item.Date)</p>
            <hr />
        </div>
    }
    <div id="myPager" style="text-align:center;">
        @Html.PageLinks(Model.PageInfo, x => Url.Action("GetComments", new { BookId = Model.Comments.First().BookId, page = x }))
    </div>
}
