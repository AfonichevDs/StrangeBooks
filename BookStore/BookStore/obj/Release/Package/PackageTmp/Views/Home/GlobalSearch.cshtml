@model IEnumerable<BookStore.Models.Book>
@{
    ViewBag.Title = "GlobalSearch";
}

<h2>Поиск по "@ViewBag.Name":</h2>
@{ 
    if (Model.Count() == 0)
    {
        @Html.Partial("NotFound");
    }
    else
    {
        foreach (var book in Model)
        {
            <div class="book col-md-10">
                <div class="col-md-4" style="margin-left:40px;">
                    <div class="row">
                        <img src="@book.ImagePath" alt="book_image" class="book-image-search" />
                    </div>
                </div>
                <div class="book-info col-md-6">
                    <div class="row">
                        <div class="desc-p">
                            <p><b>@Html.ActionLink(book.Name, "Book","Catalog",new { id = book.Id }, new { })</b></p>
                        </div>
                        <div class="desc-p">
                            <p><b>Автор:</b> @book.Author</p>
                        </div>
                        <div class="desc-p">
                            <p><b>Цена:</b> @book.Price</p>
                        </div>
                        <div class="desc-p">
                            <p><b>Жанр:</b> @book.Category.Name</p>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
}
